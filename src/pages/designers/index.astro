---
import { getDesigners } from "../../utils/microcms";
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Astro + Shopify";
const designer = await getDesigners({
  limit: 100
});
---

<BaseLayout title={title} currentPage="designers">
  <div class="grid grid-cols-5 gap-10 h-full">
    {designer.contents.map((content: any) => (
      <div class="">
        <div>
          <img src={content.image.url} alt={content.nameJa} class="w-full"/>
        </div>
        <h3 class="mt-4 text-xl">{content.nameJa}</h3>
        <p class="mt-2 text-sm">
          {content.profile}
        </p>
        <div class="mt-2">
          <a href={`/designers/${content.id}`} class="block underline underline-offset-6 mt-4 text-sm hover:no-underline">
            すべて見る
          </a>
        </div>
      </div>
    ))}
  </div>
</BaseLayout>